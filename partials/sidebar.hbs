<div class="sidebar" role="aside" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <header class="header" role="banner">
        {{! The logo of the blog }}
        <a href="/">
            <img id="blog" class="logo" src="{{@blog.logo}}" alt="Logo for {{@blog.title}}" />
        </a>

        {{! The title of the blog }}
        <h1 class="title"><a href="/">{{@blog.title}}</a></h1>

        {{! The description of the blog }}
        <p class="description">{{@blog.description}}</p>

        {{! Small separator between user details and menu }}
        <div class="separator"></div>

        {{! Navigation menu }}
        {{> "nav"}}

        {{! Social links }}
        <div class="social-icons">
            <a href="https://twitter.com/jamiestrachan" class="icon icon-twitter"><span class="offscreen">Twitter</span></a>
            <a href="http://ca.linkedin.com/in/jamiestrachan" class="icon icon-linkedin"><span class="offscreen">LinkedIn</span></a>
            <a href="https://github.com/jamiestrachan" class="icon icon-github-circled"><span class="offscreen">GitHub</span></a>
            <a href="/rss" class="icon icon-rss"><span class="offscreen">RSS Feed</span></a>
            <a href="mailto:me@jamiestrachan.ca" class="icon icon-mail"><span class="offscreen">Email</span></a>
        </div>
    </header>

    <footer class="site-footer">
        <section class="copyright">{{> "copyright"}}</section>
        <section class="poweredby">Proudly published with <a class="ghost-link" href="https://ghost.org">Ghost</a> using the <a class="ghost-link" href="https://github.com/calincru/KISS">KISS</a> theme. Powered by <a class="ghost-link" href="https://digitalocean.com">DigitalOcean</a>.</section>
    </footer>
</div>
